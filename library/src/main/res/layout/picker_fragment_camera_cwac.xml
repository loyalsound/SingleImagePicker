<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#26272b"
    >

    <RelativeLayout
        android:id="@+id/camera_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ted_picker_camera_height"
        >

        <com.commonsware.cwac.camera.CameraView
            android:id="@+id/cameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

        <com.ls.sip.view.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    <View
        android:id="@+id/vShutter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn_take_picture"
            android:layout_width="@dimen/ted_picker_fab_size"
            android:layout_height="@dimen/ted_picker_fab_size"
            android:contentDescription="@null"
            android:layout_margin="10dp"
            android:background="@drawable/sip_btn_bg"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/sip_ic_camera" />

    </LinearLayout>

</RelativeLayout>